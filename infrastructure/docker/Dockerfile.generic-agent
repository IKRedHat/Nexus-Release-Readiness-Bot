# ============================================================================
# Nexus Generic Agent - Multi-stage Production Dockerfile
# ============================================================================
# This Dockerfile is used for all specialized agents (Jira, Git/CI, Reporting, Slack)
# Build with --build-arg AGENT_NAME=<agent_name>

ARG PYTHON_VERSION=3.11

# Stage 1: Builder
FROM python:${PYTHON_VERSION}-slim as builder

ARG AGENT_NAME
ENV AGENT_NAME=${AGENT_NAME:-jira_agent}

WORKDIR /build

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy shared library
COPY shared/setup.py ./shared/setup.py
COPY shared/nexus_lib ./shared/nexus_lib

# Copy agent requirements
COPY services/agents/${AGENT_NAME}/requirements.txt ./requirements.txt

# Build wheels
RUN pip wheel --no-cache-dir --no-deps --wheel-dir /build/wheels -r requirements.txt
RUN pip wheel --no-cache-dir --no-deps --wheel-dir /build/wheels ./shared/


# Stage 2: Runtime
FROM python:${PYTHON_VERSION}-slim as runtime

ARG AGENT_NAME
ARG AGENT_PORT=8080
ENV AGENT_NAME=${AGENT_NAME:-jira_agent}
ENV AGENT_PORT=${AGENT_PORT}

# Labels
LABEL maintainer="Nexus Team <nexus@example.com>"
LABEL version="1.0.0"
LABEL description="Nexus ${AGENT_NAME} Agent"

# Create non-root user
RUN groupadd -r nexus && useradd -r -g nexus nexus

WORKDIR /app

# Install minimal runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq5 \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copy wheels and install
COPY --from=builder /build/wheels /wheels
RUN pip install --no-cache-dir /wheels/* && rm -rf /wheels

# Copy application code
COPY shared /app/shared
COPY services/agents/${AGENT_NAME} /app/services/agents/${AGENT_NAME}

# Set environment (include agent directory for local imports)
ENV PYTHONPATH="${PYTHONPATH}:/app:/app/shared:/app/services/agents/${AGENT_NAME}"
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Switch to non-root user
USER nexus

# Expose port
EXPOSE ${AGENT_PORT}

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:${AGENT_PORT}/health || exit 1

# Run agent
CMD python -m uvicorn services.agents.${AGENT_NAME}.main:app \
    --host 0.0.0.0 --port ${AGENT_PORT} --workers 1

