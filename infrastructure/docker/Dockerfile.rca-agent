# ============================================================================
# Nexus RCA Agent - Multi-stage Dockerfile
# ============================================================================

# Stage 1: Build dependencies
FROM python:3.11-slim as builder

WORKDIR /build

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy and install shared library
COPY shared/ /build/shared/
RUN pip install --no-cache-dir /build/shared/

# Copy and install service dependencies
COPY services/agents/rca_agent/requirements.txt /build/
RUN pip install --no-cache-dir --prefix=/install -r requirements.txt

# Stage 2: Production image
FROM python:3.11-slim

# Labels
LABEL maintainer="Nexus Team"
LABEL service="rca-agent"
LABEL version="2.1.0"

# Create non-root user
RUN useradd --create-home --shell /bin/bash nexus

WORKDIR /app

# Install runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq5 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy installed packages from builder
COPY --from=builder /install /usr/local
COPY --from=builder /build/shared /app/shared

# Install shared library in production
RUN pip install --no-cache-dir /app/shared/

# Copy service code
COPY services/agents/rca_agent/ /app/

# Set ownership
RUN chown -R nexus:nexus /app

# Switch to non-root user
USER nexus

# Environment
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PORT=8006

# Expose port
EXPOSE 8006

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8006/health || exit 1

# Run the service
CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8006"]

